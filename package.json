{
  "name": "puppeteer-utilz",
  "version": "2.0.0rc-1",
  "description": "Utility functions for puppeteer",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc-watch",
    "test": "jest --config jestconfig.json",
    "prepare": "install-peers",
    "prepublishOnly": "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "build:docs": "cd docs/; yarn install; yarn build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/angel-rs/puppeteer-utilz.git"
  },
  "keywords": [
    "Puppeteer",
    "Utility",
    "Typescript",
    "Javascript"
  ],
  "author": "Angel Rodr√≠guez <angelmanuelrs@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/angel-rs/puppeteer-utilz/issues"
  },
  "homepage": "https://github.com/angel-rs/puppeteer-utilz#readme",
  "devDependencies": {
    "@types/jest": "^24.0.24",
    "@types/node": "^12.12.21",
    "@types/puppeteer": "^2.0.0",
    "@types/signale": "^1.2.1",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "install-peers-cli": "^2.2.0",
    "jest": "^24.9.0",
    "puppeteer": "^2.0.0",
    "ts-jest": "^24.2.0",
    "tsc-watch": "^4.0.0",
    "typescript": "^3.7.4"
  },
  "peerDependencies": {
    "puppeteer": "^2.0.0"
  },
  "optionalDependencies": {
    "puppeteer-extra-plugin-adblocker": "^2.11.1",
    "puppeteer-extra-plugin-anonymize-ua": "^2.2.6",
    "puppeteer-extra-plugin-block-resources": "^2.2.2",
    "puppeteer-extra-plugin-click-and-wait": "^2.2.2",
    "puppeteer-extra-plugin-devtools": "^2.2.6",
    "puppeteer-extra-plugin-flash": "^2.2.2",
    "puppeteer-extra-plugin-font-size": "^2.2.2",
    "puppeteer-extra-plugin-recaptcha": "^3.1.8",
    "puppeteer-extra-plugin-repl": "^2.2.2",
    "puppeteer-extra-plugin-stealth": "^2.4.5",
    "puppeteer-extra-plugin-user-data-dir": "^2.2.2",
    "puppeteer-extra-plugin-user-preferences": "^2.2.2"
  },
  "dependencies": {
    "puppeteer-extra": "^3.1.9",
    "signale": "^1.4.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb-base"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "mjs": "never",
          "jsx": "never",
          "ts": "never"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts"
          ]
        }
      }
    }
  },
  "jest": {
    "preset": "ts-jest"
  }
}
